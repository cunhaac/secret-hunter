{
"manifest_version": 3,
"name": "Secret Hunter",
"version": "1.0",
"description": "Automatically scans pages for leaked API keys and secrets.",
"host_permissions": ["<all_urls>"],
"permissions": ["scripting", "activeTab", "storage", "notifications"],
"background": {
"service_worker": "background.js"
},
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "icons/favicon.ico",
"48": "icons/favicon.ico",
"128": "icons/favicon.ico"
}
},
"icons": {
"16": "icons/favicon.ico",
"48": "icons/favicon.ico",
"128": "icons/favicon.ico"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content.js"],
"run_at": "document_end"
}
]
}